---
import Layout from "../../layouts/Layout.astro";
import CalculatorShell from "../../components/calculators/CalculatorShell.astro";
import InputNumber from "../../components/calculators/InputNumber.astro";
import Select from "../../components/calculators/Select.astro";
import CurrencyToggle from "../../components/calculators/CurrencyToggle.astro";
import RelatedTools from "../../components/RelatedTools.astro";
import ToolContent from "../../components/ToolContent.astro";
import { formatUYU } from "../../lib/calculations/utils";
import { breadcrumbSchema } from "../../lib/seo/breadcrumbSchema";
import Breadcrumbs from "../../components/Breadcrumbs.astro";

const breadcrumbs = [
    { name: "Inicio", url: "/" },
    { name: "Calculadoras", url: "/calculadoras" },
    {
        name: "Conversor de Sueldo",
        url: "/calculadoras/conversor-sueldo-uruguay",
    },
];

const schema = breadcrumbSchema(breadcrumbs);
---

<Layout
    title="Conversor de Sueldo Uruguay - CalculaEasy"
    description="Desglosá tu sueldo mensual en Uruguay. Calculá cuánto ganás por hora, día, semana y año."
    canonical="https://calculaeasy.com/calculadoras/conversor-sueldo-uruguay"
    schema={schema}
>
    <div class="bg-indigo-50 min-h-screen py-12">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
            <Breadcrumbs items={breadcrumbs} />

            <CalculatorShell
                title="Conversor de Sueldo"
                description="Desglosá tu sueldo mensual y calculá cuánto ganás por hora, día, semana y año."
            >
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
                    <!-- Form -->
                    <div class="space-y-6">
                        <InputNumber
                            label="Sueldo Mensual"
                            name="monthlyAmount"
                            placeholder="Ej: 50000"
                            min={0}
                        />

                        <CurrencyToggle label="Moneda" name="currency" />

                        <div id="exchange-rate-container" class="hidden">
                            <InputNumber
                                label="Cotización Dólar"
                                name="exchangeRate"
                                value={40}
                                min={1}
                            />
                        </div>

                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <InputNumber
                                label="Horas por día"
                                name="hoursPerDay"
                                value={8}
                                min={1}
                                max={24}
                            />
                            <InputNumber
                                label="Días por semana"
                                name="daysPerWeek"
                                value={5}
                                min={1}
                                max={7}
                            />
                        </div>
                    </div>

                    <!-- Results -->
                    <div class="space-y-6">
                        <div
                            class="bg-indigo-900 rounded-2xl p-6 sm:p-8 text-white relative overflow-hidden shadow-lg"
                        >
                            <div
                                class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-indigo-200/50 rounded-full opacity-20 blur-xl"
                            >
                            </div>

                            <div
                                class="relative z-10 grid grid-cols-1 sm:grid-cols-2 gap-6"
                            >
                                <div>
                                    <p
                                        class="text-indigo-300 text-sm font-medium uppercase tracking-wider mb-1"
                                    >
                                        Por Hora
                                    </p>
                                    <p
                                        class="text-2xl font-bold"
                                        id="result-hourly"
                                    >
                                        $ 0
                                    </p>
                                </div>
                                <div>
                                    <p
                                        class="text-indigo-300 text-sm font-medium uppercase tracking-wider mb-1"
                                    >
                                        Por Día (Jornal)
                                    </p>
                                    <p
                                        class="text-2xl font-bold"
                                        id="result-daily"
                                    >
                                        $ 0
                                    </p>
                                </div>
                                <div
                                    class="sm:col-span-2 border-t border-indigo-200/50 pt-4"
                                >
                                    <div class="grid grid-cols-2 gap-6">
                                        <div>
                                            <p
                                                class="text-indigo-300 text-sm font-medium uppercase tracking-wider mb-1"
                                            >
                                                Por Semana
                                            </p>
                                            <p
                                                class="text-2xl font-bold"
                                                id="result-weekly"
                                            >
                                                $ 0
                                            </p>
                                        </div>
                                        <div>
                                            <p
                                                class="text-indigo-300 text-sm font-medium uppercase tracking-wider mb-1"
                                            >
                                                Anual
                                            </p>
                                            <p
                                                class="text-2xl font-bold"
                                                id="result-yearly"
                                            >
                                                $ 0
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div
                            class="p-4 bg-blue-50 rounded-xl border border-blue-100 text-sm text-blue-800"
                        >
                            <p>
                                <strong>Nota:</strong> Cálculo basado en el año promedio
                                (52 semanas / 12 meses).
                            </p>
                        </div>
                    </div>
                </div>
            </CalculatorShell>
            <ToolContent toolId="conversor-sueldo-uruguay" />
            <RelatedTools currentTool="conversor-sueldo-uruguay" />
        </div>
    </div>
</Layout>

<script>
    import { convertSalary } from "../../lib/calculations/uy/salary/salaryConverter";
    import { formatUYU } from "../../lib/calculations/utils";

    const inputMonthly = document.querySelector(
        'input[name="monthlyAmount"]',
    ) as HTMLInputElement;
    const inputCurrency = document.querySelector(
        'select[name="currency"]',
    ) as HTMLSelectElement;
    const inputExchangeRate = document.querySelector(
        'input[name="exchangeRate"]',
    ) as HTMLInputElement;
    const exchangeRateContainer = document.getElementById(
        "exchange-rate-container",
    );
    const inputHours = document.querySelector(
        'input[name="hoursPerDay"]',
    ) as HTMLInputElement;
    const inputDays = document.querySelector(
        'input[name="daysPerWeek"]',
    ) as HTMLInputElement;

    const resHourly = document.getElementById("result-hourly");
    const resDaily = document.getElementById("result-daily");
    const resWeekly = document.getElementById("result-weekly");
    const resYearly = document.getElementById("result-yearly");

    function toggleExchangeRate() {
        if (inputCurrency.value === "USD") {
            exchangeRateContainer?.classList.remove("hidden");
        } else {
            exchangeRateContainer?.classList.add("hidden");
        }
        recalculate();
    }

    function recalculate() {
        const monthlyAmount = parseFloat(inputMonthly.value) || 0;
        const currency = (inputCurrency.value as "UYU" | "USD") || "UYU";
        const exchangeRate = parseFloat(inputExchangeRate.value) || 40;
        let hoursPerDay = parseFloat(inputHours.value) || 8;
        let daysPerWeek = parseFloat(inputDays.value) || 5;

        // Force limits logic for calculation
        if (hoursPerDay > 24) hoursPerDay = 24;
        if (daysPerWeek > 7) daysPerWeek = 7;

        const result = convertSalary({
            monthlyAmount,
            hoursPerDay,
            daysPerWeek,
            weeksPerYear: 52,
            monthsPerYear: 12,
            currency,
            exchangeRate,
        });

        if (resHourly) resHourly.innerText = formatUYU(result.hourly);
        if (resDaily) resDaily.innerText = formatUYU(result.daily);
        if (resWeekly) resWeekly.innerText = formatUYU(result.weekly);
        if (resYearly) resYearly.innerText = formatUYU(result.yearly);
    }

    // Listeners
    inputMonthly?.addEventListener("input", recalculate);
    inputCurrency?.addEventListener("change", toggleExchangeRate);
    inputExchangeRate?.addEventListener("input", recalculate);
    inputHours?.addEventListener("input", recalculate);
    inputDays?.addEventListener("input", recalculate);
</script>
