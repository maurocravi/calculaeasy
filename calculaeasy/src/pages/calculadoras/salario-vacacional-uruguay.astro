---
import Layout from "../../layouts/Layout.astro";
import CalculatorShell from "../../components/calculators/CalculatorShell.astro";
import InputNumber from "../../components/calculators/InputNumber.astro";
import Select from "../../components/calculators/Select.astro";
import CurrencyToggle from "../../components/calculators/CurrencyToggle.astro";
import RelatedTools from "../../components/RelatedTools.astro";
import ToolContent from "../../components/ToolContent.astro";
import { formatUYU } from "../../lib/calculations/utils";
import { breadcrumbSchema } from "../../lib/seo/breadcrumbSchema";
import Breadcrumbs from "../../components/Breadcrumbs.astro";

const breadcrumbs = [
    { name: "Inicio", url: "/" },
    { name: "Calculadoras", url: "/calculadoras" },
    {
        name: "Salario Vacacional",
        url: "/calculadoras/salario-vacacional-uruguay",
    },
];

const schema = breadcrumbSchema(breadcrumbs);
---

<Layout
    title="Calcular Salario Vacacional Uruguay - CalculaEasy"
    description="Calculadora de Salario Vacacional en Uruguay. Aprendé cómo se calcula y cuánto te corresponde."
    canonical="https://calculaeasy.com/calculadoras/salario-vacacional-uruguay"
    schema={schema}
>
    <div class="bg-indigo-50 min-h-screen py-12">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
            <Breadcrumbs items={breadcrumbs} />

            <CalculatorShell
                title="Calculadora de Salario Vacacional"
                description="Calculá cuánto te corresponde de Salario Vacacional líquido según tus días de licencia."
            >
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
                    <!-- Form -->
                    <div class="space-y-6">
                        <InputNumber
                            label="Sueldo Nominal Mensual"
                            name="monthlyNominal"
                            placeholder="Ej: 45000"
                            min={0}
                        />

                        <CurrencyToggle label="Moneda" name="currency" />

                        <div id="exchange-rate-container" class="hidden">
                            <InputNumber
                                label="Cotización Dólar"
                                name="exchangeRate"
                                value={40}
                                min={1}
                            />
                        </div>

                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <InputNumber
                                label="Días de Licencia"
                                name="vacationDays"
                                value={20}
                                min={1}
                            />
                            <InputNumber
                                label="Divisor (Días Mes)"
                                name="monthDaysDivisor"
                                value={30}
                                min={1}
                            />
                        </div>
                    </div>

                    <!-- Results -->
                    <div class="space-y-6">
                        <div
                            class="bg-indigo-900 rounded-2xl p-6 sm:p-8 text-white relative overflow-hidden shadow-lg"
                        >
                            <div
                                class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-indigo-500 rounded-full opacity-20 blur-xl"
                            >
                            </div>

                            <div class="relative z-10 space-y-6">
                                <div>
                                    <p
                                        class="text-indigo-300 text-sm font-medium uppercase tracking-wider mb-1"
                                    >
                                        Valor Jornal Vacacional
                                    </p>
                                    <p
                                        class="text-2xl font-semibold"
                                        id="result-daily"
                                    >
                                        $ 0
                                    </p>
                                </div>

                                <div class="pt-4 border-t border-indigo-200/50">
                                    <p
                                        class="text-indigo-200 text-sm font-medium uppercase tracking-wider mb-1"
                                    >
                                        Total Salario Vacacional (Líquido)
                                    </p>
                                    <p
                                        class="text-4xl sm:text-5xl font-bold"
                                        id="result-total"
                                    >
                                        $ 0
                                    </p>
                                    <p
                                        class="text-indigo-300 text-xs mt-2 opacity-80"
                                    >
                                        * Monto neto al bolsillo (el salario
                                        vacacional no lleva descuentos, salvo
                                        IRPF si supera el mínimo).
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div
                            class="p-4 bg-blue-50 rounded-xl border border-blue-100 text-sm text-blue-800"
                        >
                            <p>
                                <strong>Nota:</strong> El Salario Vacacional es una
                                partida 100% líquida (no lleva aportes jubilatorios
                                ni FONASA). Sin embargo, suma para el cálculo del
                                IRPF anual.
                            </p>
                        </div>
                    </div>
                </div>
            </CalculatorShell>
            <ToolContent toolId="salario-vacacional-uruguay" />
            <RelatedTools currentTool="salario-vacacional-uruguay" />
        </div>
    </div>
</Layout>

<script>
    import { calculateVacational } from "../../lib/calculations/uy/salary/vacational";
    import { formatUYU } from "../../lib/calculations/utils";

    const inputNominal = document.querySelector(
        'input[name="monthlyNominal"]',
    ) as HTMLInputElement;
    const inputCurrency = document.querySelector(
        'select[name="currency"]',
    ) as HTMLSelectElement;
    const inputExchangeRate = document.querySelector(
        'input[name="exchangeRate"]',
    ) as HTMLInputElement;
    const exchangeRateContainer = document.getElementById(
        "exchange-rate-container",
    );
    const inputDays = document.querySelector(
        'input[name="vacationDays"]',
    ) as HTMLInputElement;
    const inputDivisor = document.querySelector(
        'input[name="monthDaysDivisor"]',
    ) as HTMLInputElement;

    const resultDaily = document.getElementById("result-daily");
    const resultTotal = document.getElementById("result-total");

    function toggleExchangeRate() {
        if (inputCurrency.value === "USD") {
            exchangeRateContainer?.classList.remove("hidden");
        } else {
            exchangeRateContainer?.classList.add("hidden");
        }
        recalculate();
    }

    function recalculate() {
        const monthlyNominal = parseFloat(inputNominal.value) || 0;
        const currency = (inputCurrency.value as "UYU" | "USD") || "UYU";
        const exchangeRate = parseFloat(inputExchangeRate.value) || 40;
        const vacationDays = parseFloat(inputDays.value) || 20;
        const monthDaysDivisor = parseFloat(inputDivisor.value) || 30;

        const result = calculateVacational({
            monthlyNominal,
            currency,
            exchangeRate,
            vacationDays,
            monthDaysDivisor,
        });

        if (resultDaily) resultDaily.innerText = formatUYU(result.dailyRate);
        if (resultTotal)
            resultTotal.innerText = formatUYU(result.vacationalPay);
    }

    // Listeners
    inputNominal?.addEventListener("input", recalculate);
    inputCurrency?.addEventListener("change", toggleExchangeRate);
    inputExchangeRate?.addEventListener("input", recalculate);
    inputDays?.addEventListener("input", recalculate);
    inputDivisor?.addEventListener("input", recalculate);
</script>
