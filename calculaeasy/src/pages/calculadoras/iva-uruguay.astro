---
import Layout from "../../layouts/Layout.astro";
import CalculatorShell from "../../components/calculators/CalculatorShell.astro";
import InputNumber from "../../components/calculators/InputNumber.astro";
import Select from "../../components/calculators/Select.astro";
import CurrencyToggle from "../../components/calculators/CurrencyToggle.astro";
import RelatedTools from "../../components/RelatedTools.astro";
import ToolContent from "../../components/ToolContent.astro";
import { formatUYU } from "../../lib/calculations/utils";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import { breadcrumbSchema } from "../../lib/seo/breadcrumbSchema";

const vatRates = [
    { label: "IVA Básico (22%)", value: 0.22 },
    { label: "IVA Mínimo (10%)", value: 0.1 },
];

const modes = [
    { label: "Agregar IVA (De sin IVA a con IVA)", value: "add" },
    { label: "Descontar IVA (De con IVA a sin IVA)", value: "remove" },
];

const breadcrumbs = [
    { name: "Inicio", url: "/" },
    { name: "Calculadoras", url: "/calculadoras" },
    {
        name: "Calculadora IVA",
        url: "/calculadoras/iva-uruguay",
    },
];

const schema = breadcrumbSchema(breadcrumbs);
---

<Layout
    title="Calculadora IVA Uruguay (22% y 10%) - CalculaEasy"
    description="Calculá el IVA en Uruguay de forma fácil. Tasa básica (22%) y mínima (10%) para tus compras o ventas."
    canonical="https://calculaeasy.com/calculadoras/iva-uruguay"
    schema={schema}
>
    <div class="bg-indigo-50 min-h-screen py-12">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
            <Breadcrumbs items={breadcrumbs} />

            <CalculatorShell
                title="Calculadora de IVA"
                description="Calculá fácilmente el IVA de tus compras o ventas. Agregá o descontá el impuesto."
            >
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
                    <!-- Form -->
                    <div class="space-y-6">
                        <InputNumber
                            label="Monto"
                            name="amount"
                            placeholder="Ej: 1000"
                            min={0}
                        />

                        <CurrencyToggle label="Moneda" name="currency" />

                        <div id="exchange-rate-container" class="hidden">
                            <InputNumber
                                label="Cotización Dólar"
                                name="exchangeRate"
                                value={40}
                                min={1}
                            />
                        </div>

                        <Select
                            label="¿Qué querés hacer?"
                            name="mode"
                            options={modes}
                        />

                        <Select
                            label="Tasa de IVA"
                            name="rate"
                            options={vatRates}
                        />
                    </div>

                    <!-- Results -->
                    <div class="space-y-6">
                        <div
                            class="bg-indigo-900 rounded-2xl p-6 sm:p-8 text-white relative overflow-hidden shadow-lg"
                        >
                            <div
                                class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-indigo-500 rounded-full opacity-20 blur-xl"
                            >
                            </div>

                            <div class="relative z-10 space-y-6">
                                <div>
                                    <p
                                        class="text-indigo-300 text-sm font-medium uppercase tracking-wider mb-1"
                                    >
                                        Monto Neto (Sin IVA)
                                    </p>
                                    <p
                                        class="text-2xl font-semibold"
                                        id="result-net"
                                    >
                                        $ 0
                                    </p>
                                </div>

                                <div class="flex items-center gap-2">
                                    <div class="h-px bg-indigo-200/50 flex-1">
                                    </div>
                                    <span class="text-indigo-300 text-sm"
                                        >+ IVA</span
                                    >
                                    <div class="h-px bg-indigo-200/50 flex-1">
                                    </div>
                                </div>

                                <div>
                                    <p
                                        class="text-indigo-300 text-sm font-medium uppercase tracking-wider mb-1"
                                    >
                                        Monto IVA
                                    </p>
                                    <p
                                        class="text-2xl font-semibold text-yellow-400"
                                        id="result-vat"
                                    >
                                        $ 0
                                    </p>
                                </div>

                                <div class="pt-4 border-t border-indigo-200/50">
                                    <p
                                        class="text-indigo-200 text-sm font-medium uppercase tracking-wider mb-1"
                                    >
                                        Total (Con IVA)
                                    </p>
                                    <p
                                        class="text-4xl sm:text-5xl font-bold"
                                        id="result-gross"
                                    >
                                        $ 0
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </CalculatorShell>
            <ToolContent toolId="iva-uruguay" />
            <RelatedTools currentTool="iva-uruguay" />
        </div>
    </div>
</Layout>

<script>
    import { calculateVat } from "../../lib/calculations/uy/taxes/vat";
    import { formatUYU } from "../../lib/calculations/utils";

    const selectMode = document.querySelector(
        'select[name="mode"]',
    ) as HTMLSelectElement;
    const selectRate = document.querySelector(
        'select[name="rate"]',
    ) as HTMLSelectElement;
    const inputAmount = document.querySelector(
        'input[name="amount"]',
    ) as HTMLInputElement;

    const inputCurrency = document.querySelector(
        'select[name="currency"]',
    ) as HTMLSelectElement;
    const inputExchangeRate = document.querySelector(
        'input[name="exchangeRate"]',
    ) as HTMLInputElement;
    const exchangeRateContainer = document.getElementById(
        "exchange-rate-container",
    );

    const resultNet = document.getElementById("result-net");
    const resultVat = document.getElementById("result-vat");
    const resultGross = document.getElementById("result-gross");

    function toggleExchangeRate() {
        if (inputCurrency.value === "USD") {
            exchangeRateContainer?.classList.remove("hidden");
        } else {
            exchangeRateContainer?.classList.add("hidden");
        }
        recalculate();
    }

    function recalculate() {
        const mode = selectMode.value as "add" | "remove";
        const rate = parseFloat(selectRate.value) || 0.22;
        const amount = parseFloat(inputAmount.value) || 0;
        const currency = (inputCurrency.value as "UYU" | "USD") || "UYU";
        const exchangeRate = parseFloat(inputExchangeRate.value) || 40;

        const result = calculateVat({
            mode,
            rate,
            amount,
            currency,
            exchangeRate,
        });

        if (resultNet) resultNet.innerText = formatUYU(result.net);
        if (resultVat) resultVat.innerText = formatUYU(result.vat);
        if (resultGross) resultGross.innerText = formatUYU(result.gross);
    }

    // Listeners
    selectMode?.addEventListener("change", recalculate);
    selectRate?.addEventListener("change", recalculate);
    inputAmount?.addEventListener("input", recalculate);
    inputCurrency?.addEventListener("change", toggleExchangeRate);
    inputExchangeRate?.addEventListener("input", recalculate);
</script>
