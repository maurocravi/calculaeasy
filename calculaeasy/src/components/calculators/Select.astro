---
interface Option {
    label: string;
    value: string | number;
}

interface Props {
    label: string;
    name: string;
    id?: string;
    options: Option[];
    value?: string | number;
}

const { label, name, id, options, value } = Astro.props;
const selectId = id || name;
---

<div class="mb-6">
    <label
        for={selectId}
        class="block text-sm font-semibold text-slate-700 mb-2"
    >
        {label}
    </label>
    <div class="relative">
        <select
            name={name}
            id={selectId}
            class="block w-full px-4 py-4 rounded-xl border-slate-200 bg-slate-50 text-slate-900 focus:border-indigo-500 focus:ring-indigo-500 hover:border-indigo-300 transition-colors shadow-sm text-lg cursor-pointer"
        >
            {
                options.map((opt) => (
                    <option value={opt.value} selected={opt.value === value}>
                        {opt.label}
                    </option>
                ))
            }
        </select>
    </div>
</div>
