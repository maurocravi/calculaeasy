---
const tools = [
    {
        title: "Calculadora sueldo líquido",
        description: "Pasá de nominal a lo que te llega al bolsillo.",
        icon: "/ilustraciones/sueldo.svg",
        href: "/calculadoras/sueldo-liquido-uruguay",
    },
    {
        title: "Calculadora aguinaldo",
        description: "Estimá cuánto vas a cobrar en junio o diciembre.",
        icon: "/ilustraciones/aguinaldo.svg",
        href: "/calculadoras/aguinaldo-uruguay",
    },
    {
        title: "Calculadora salario vacacional",
        description: "Para planificar mejor tu descanso.",
        icon: "/ilustraciones/vacacional.svg",
        href: "/calculadoras/salario-vacacional-uruguay",
    },
    {
        title: "Horas extra",
        description: "Calculá el valor de tus horas simples y dobles.",
        icon: "/ilustraciones/horas-extra.svg",
        href: "/calculadoras/horas-extra-uruguay",
    },
    {
        title: "IVA",
        description: "Agregá o descontá el IVA básico o mínimo.",
        icon: "/ilustraciones/iva.svg",
        href: "/calculadoras/iva-uruguay",
    },
    {
        title: "Conversor de sueldo",
        description: "Convertí tu sueldo mensual a hora, día, semana y año.",
        icon: "/ilustraciones/conversor.svg",
        href: "/calculadoras/conversor-sueldo-uruguay",
    },
];
---

<section id="calculadoras" class="py-20 bg-slate-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-4">
                Herramientas más usadas
            </h2>
            <p class="text-slate-600 text-lg">
                Elegí la calculadora que necesitás hoy.
            </p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {
                tools.map((tool) => (
                    <a
                        href={tool.href}
                        class="group block p-8 bg-white rounded-2xl border border-slate-100 shadow-sm hover:shadow-xl hover:border-indigo-100 transition-all duration-300 transform hover:-translate-y-1"
                    >
                        <div class="flex items-start justify-between mb-4">
                            <img
                                src={tool.icon}
                                alt={tool.title}
                                class="w-16 h-16 sm:w-20 sm:h-20"
                            />
                            <div class="w-8 h-8 rounded-full bg-slate-50 flex items-center justify-center group-hover:bg-indigo-50 transition-colors">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="w-4 h-4 text-slate-400 group-hover:text-indigo-600 transition-colors"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 5l7 7-7 7"
                                    />
                                </svg>
                            </div>
                        </div>
                        <h3 class="text-xl font-bold text-slate-900 mb-2 group-hover:text-indigo-600 transition-colors">
                            {tool.title}
                        </h3>
                        <p class="text-slate-600">{tool.description}</p>
                    </a>
                ))
            }
        </div>
    </div>
</section>
